<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Brewwatcher Web <%= yield_content :title %></title>
        <link href="/css/application.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/css/foundation.css" />
  

        <script src="/js/vendor/custom.modernizr.js"></script>
    </head>
    <body>
        <header>
            <ul class="breadcrumbs">
                <% for crumb in @breadcrumbs %>
                <% if crumb == @breadcrumbs.last %>
                <li class="current">
                    <% else %>
                    <li>
                        <% end %>
                        <%= link_to crumb.name, crumb.path %>
                    </li>
                    <% end %>
                </ul>
            <div class="row header center">
                <div class="large-12 large-centered columns">
                    <%= yield_content :header %>
                </div>
            </div>
        </header>

        <%= yield %>

        <script type="text/javascript" src="/js/vendor/zepto.js"></script>
        <script type="text/javascript" src="/js/foundation.min.js"></script>
        <script type="text/javascript" src="/js/d3.v3.js"></script>
        <script type="text/javascript" src="/js/reqwest.js"></script>
        <%= yield_content :additional_js %>
    </body>
</html> 